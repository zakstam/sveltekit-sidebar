{
  "name": "sveltekit-sidebar-workspace",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.28.1",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "prepare": "npm --prefix packages/sidebar run package",
    "dev:docs": "pnpm -C apps/docs dev",
    "build:sidebar": "pnpm -C packages/sidebar build",
    "package:sidebar": "pnpm -C packages/sidebar package",
    "check:sidebar": "pnpm -C packages/sidebar check",
    "check:docs": "pnpm -C apps/docs check",
    "test:sidebar": "pnpm -C packages/sidebar test",
    "release:sidebar": "pnpm -C packages/sidebar release",
    "release:sidebar:patch": "pnpm -C packages/sidebar release:patch",
    "release:sidebar:minor": "pnpm -C packages/sidebar release:minor",
    "release:sidebar:major": "pnpm -C packages/sidebar release:major"
  },
  "devDependencies": {
    "@sveltejs/adapter-auto": "^6.0.0",
    "@sveltejs/kit": "^2.16.0",
    "@sveltejs/package": "^2.3.0",
    "@sveltejs/vite-plugin-svelte": "^5.0.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/svelte": "^5.3.1",
    "jsdom": "^27.4.0",
    "publint": "^0.3.0",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "typescript": "^5.0.0",
    "vite": "^6.0.0",
    "vitest": "^4.0.18"
  },
  "exports": {
    ".": {
      "types": "./packages/sidebar/dist/index.d.ts",
      "svelte": "./packages/sidebar/dist/index.js",
      "import": "./packages/sidebar/dist/index.js",
      "default": "./packages/sidebar/dist/index.js"
    },
    "./styles": {
      "development": "./packages/sidebar/src/lib/styles/index.ts",
      "default": "./packages/sidebar/dist/styles/index.js"
    },
    "./styles.css": {
      "development": "./packages/sidebar/src/lib/styles/index.css",
      "default": "./packages/sidebar/dist/styles/index.css"
    }
  },
  "svelte": "./packages/sidebar/dist/index.js",
  "types": "./packages/sidebar/dist/index.d.ts"
}
