{
  "name": "sveltekit-sidebar",
  "version": "0.9.3",
  "description": "A type-safe, infinitely nestable sidebar component library for SvelteKit",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build && pnpm run package",
    "preview": "vite preview",
    "package": "svelte-kit sync && svelte-package && publint",
    "prepare": "svelte-kit sync && svelte-package",
    "prepublishOnly": "pnpm run package",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "test": "vitest run",
    "release": "node scripts/release.js",
    "release:patch": "pnpm run release -- patch",
    "release:minor": "pnpm run release -- minor",
    "release:major": "pnpm run release -- major"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./styles": {
      "development": "./src/lib/styles/index.ts",
      "default": "./dist/styles/index.js"
    },
    "./styles.css": {
      "development": "./src/lib/styles/index.css",
      "default": "./dist/styles/index.css"
    }
  },
  "files": [
    "dist",
    "src/lib/styles",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "peerDependencies": {
    "@sveltejs/kit": "^2.0.0",
    "svelte": "^5.0.0"
  },
  "keywords": [
    "svelte",
    "sveltekit",
    "sidebar",
    "navigation",
    "component",
    "nested",
    "collapsible"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zakstam/sveltekit-sidebar.git"
  },
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts"
}
